<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href= "/public/assets/styleshome.css" rel="stylesheet" type="text/css" />
 
    <link href= "/public/assets/stylesarticle.css" rel="stylesheet" type="text/css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative&display=swap" rel="stylesheet">
    
   
    <title>Author - Article</title>
</head>
<body>
    <div id="title">
        <% updatedSettings.forEach
        (function(parameter1)
        { %>
            
                <h1><%= parameter1.blog_title %></h1>
                <h3><%= parameter1.subtitle %></h3>
                <h5><%= parameter1.author_name %></h5>
               
                <!-- <img src="/boy.png" width="100" height="100" alt="Italian Trulli" >  -->
        <% }
        )
        %>
       </div>


     <% updatedArticles.forEach(function(parameter1){ %>       
    <form action="updateArticle" method="post">
                  
        <table style="border:1px solid black" >
        <thead>
           
        </thead>
        <tbody>
            <tr>
                <th>Title</th>
            </tr>

            <tr>
            <td><input type=" text" name="title" value="<%= parameter1.title %>"></td>
            </tr>

            <tr>
                <th>Subtitle</th>
            </tr>

            <tr>
            <td><input type="text" name="subtitle" value="<%= parameter1.subtitle %>"></td>
            </tr>

            <tr>
                <th>Body</th>
            </tr>

            <td>
            <textarea id="story" name="article" rows="7" cols="90" value="<%= parameter1.article %>"><%= parameter1.article %></textarea>
            </td>

             
                    
        </tbody>
    </table>
    <button type="submit"name="id"value="<%= parameter1.id %>">UPDATE</button>
</form>
<% }) %>
    

    
    
  
</body>
</html>