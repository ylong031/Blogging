<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Author - Home Page</title>
    <link href= "/public/assets/styleshome.css" rel="stylesheet" type="text/css" />
 

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative&display=swap" rel="stylesheet">
</head>
<body>
    

    <div id="title">
        
     <% updatedSettings.forEach
     (function(parameter1)
     { %>
      
             <h1><%= parameter1.blog_title %> </h1>
             <h2><%= parameter1.subtitle %></h2>
             <h3><%= parameter1.author_name %></h3>
            
             <!-- <img src="/boy.png" width="100" height="100" alt="Italian Trulli" >  -->
        
     <% }
     )
     %>
    </div>
    
    <form action="setting" method="get"id="setting">
        <button type="submit" >Settings</button>
    </form>
    <h2>~Draft Articles~</h2>
  

    <form method="post">
        <table border="2" width="183"  style='table-layout:fixed'>
            <col width="250">
            <col width="250">
            <col width="200">
            <col width="200">
            <col width="300">
           
        <thead>
            <tr>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Created</th>
                <th>Last Modified</th>
                <th>Actions</th>
               
            </tr>
        </thead>
        <tbody>

            <% updatedArticles.forEach
            (function(parameter1)
            { %>
            <tr>
                <td class="left">
                <div style="height: 20px; overflow:hidden;">
                    <%= parameter1.title %>
                </div>
                </td>
                
                <td class="left">
                    <div style="height: 20px; overflow:hidden;">
                        <%= parameter1.subtitle %>
                    </div>
                </td>
                
                <td>
                    <div style="height: 20px; overflow:hidden;">
                        <%= parameter1.created %>
                    </div>
                </td>

                <td>
                    <div style="height: 20px; overflow:hidden;">
                        <%= parameter1.last_modified %>
                    </div>
                </td>

               
        
            <td>

                
                <button type="submit"name="id"value="<%= parameter1.id %>" formaction="article">EDIT</button>
                <button type="submit"name="id"value="<%= parameter1.id %>" formaction="publish">PUBLISH</button>
                <button type="submit"name="id"value="<%= parameter1.id %>" formaction="delete">DELETE</button>
            </td>

      


            </tr>
            <% }
            )
            %>
                       
        
        </tbody>
    </table>
</form>

<form action="newdraft" method="get">
    <button type="submit">CREATE NEW DRAFT</button>
</form>






<h2>~Published Articles~</h2>

<form method="post">
    <table border="2" width="183" style='table-layout:fixed'>
        <col width="250">
        <col width="250">
        <col width="200">
        <col width="200">
        <col width="70">
        <col width="180">
        
        <thead>
            <tr>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Created</th>
                <th>Published</th>
                <th>Likes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% publishedArticles.forEach
     (function(parameter1)
     { %>
            <tr>
                <td class="left">
                <div style="height: 20px; overflow:hidden;">
                    <%= parameter1.title %>
                </div>
                </td>
                
                <td class="left">
                    <div style="height: 20px; overflow:hidden;">
                        <%= parameter1.subtitle %>
                    </div>
                </td>
                
                <td>
                    <div style="height: 20px; overflow:hidden;">
                        <%= parameter1.created %>
                    </div>
                </td>

                <td>
                    <div style="height: 20px; overflow:hidden;">
                        <%= parameter1.last_modified %>
                    </div>
                </td>

                

            <td>
                <div style="height: 20px; overflow:hidden;">
                    <%= parameter1.likes %>
                </div>
            </td>
            <td>
                <div style= overflow:hidden;">
                <button type="submit"name="id"value="<%= parameter1.id %>" formaction="delete">DELETE</button>
                </div>
            </td>


            </tr>
            <% }
            )
            %>
        </tbody>
    </table>
    
</form>


</body>
</html>
